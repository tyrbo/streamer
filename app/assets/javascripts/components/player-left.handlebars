<div class="col-md-5">
  <div class="row">
    <div class="col-md-3">
      <span {{bind-attr class=player.champion}}></span>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-12"><strong>{{player.name}}</strong></div>
      </div>
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-12"><span class="glyphicon glyphicon-stats"></span>&nbsp;&nbsp;{{player.kills}} / {{player.deaths}} / {{player.assists}}</div>
      </div>
      <div class="row">
        <div class="col-md-6"><span class="glyphicon glyphicon-screenshot"></span>&nbsp;&nbsp;{{player.creeps}}</div>
        <div class="col-md-6 text-right">{{player.gold}}</div>
      </div>
    </div>
  </div>
</div>
