<div class="container-fluid">
  <div class="col-md-12">
    <div class="loading-wrapper">
      <h4 class="text-center">Waiting for game data...</h2>
      <div class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </div>
    </div>
  </div>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container-fluid">
    <ul class="nav navbar-nav" style="overflow: hidden; max-height: 40px;">
      {{#each}}
        {{#each contestants}}
        {{/each}}
        <li {{bind-attr class="finished:finished"}}>
          <a href="#">{{match_name}}</a>
        </li>
      {{/each}}
    </ul>
  </div>
</nav>
